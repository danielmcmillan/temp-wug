// This is the sample configuration for temperature rrds
{
    // Connection details for the rrdtool server running in superserver such as xinetd
    "rrd_address": "localhost",
    "rrd_port": "13900",

    // The temperature sensors known by rrdtool
    "sensors":
    {
        "sensor-id": { "name": "sensor-name", "rrd_file": "temps.rrd", "colour": "#ffffff" }
    },

    // The time in seconds for rrdtool to expect between temperature readings
    "rrd_step": 10,

    // Range of temperatures expected
    "min_temp": -55,
    "max_temp": 125,

    // Details of the round robin archives for storing temperatures
    "archives":
    [
        // cf: consolidation function (AVERAGE|MAX|MIN)
        // steps: the number of steps to be consolidated into a single data point
        // rows: the total number of data points to store
        //       the total time in seconds is rrd_step * steps * rows
        // xff: maximum ratio of unknown to known data points before the consolidated
        //      value is regarded as unknown
        { "cf": "AVERAGE", "steps": 6, "rows": 10080, "xff": 0.5 }, // 7 days of minute averages
        { "cf": "MAX", "steps": 360, "rows": 438000, "xff": 0.5 }, // 50 years of hourly maximums
        { "cf": "MIN", "steps": 360, "rows": 438000, "xff": 0.5 }, // 50 years of hourly minimums
        { "cf": "MAX", "steps": 360, "rows": 438000, "xff": 0.5 }, // 50 years of hourly maximums
        { "cf": "AVERAGE", "steps": 360, "rows": 438000, "xff": 0.5 } // 50 years of hourly averages
    ]
}